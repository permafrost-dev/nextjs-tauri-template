{
    "name": "nextjs-tauri-template",
    "version": "0.1.0",
    "private": true,
    "author": {
        "name": "Your Name Here",
        "email": "your-email-here@example.com"
    },
    "scripts": {
        "next-start": "cross-env BROWSER=none next dev",
        "next-build": "next build && next export",
        "tauri": "tauri",
        "build": "tauri build",
        "dev": "tauri dev",
        "lint": "next lint",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            "./node_modules/.bin/prettier --config prettier.config.js --write",
            "./node_modules/.bin/eslint --fix"
        ],
        "*.{json,css,scss,gql}": [
            "./node_modules/.bin/prettier --config prettier.config.js --write"
        ],
        "*.{yaml,yml}": [
            "./node_modules/.bin/prettier --config prettier.config.js --tab-width 2 --write"
        ],
        "*.{html,css,scss,svg,md}": [
            "./node_modules/.bin/prettier --config prettier.config.js --write"
        ]
    },
    "dependencies": {
        "@tauri-apps/api": "^1.5.3",
        "clsx": "^1.2.1",
        "next": "^15.4.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.5",
        "@tailwindcss/typography": "^0.5.9",
        "@tauri-apps/cli": "^1.5.6",
        "@testing-library/dom": "^9.3.1",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.5.3",
        "@types/node": "^20.11.19",
        "@types/react": "^18.2.58",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "autoprefixer": "^10.4.14",
        "cross-env": "^7.0.3",
        "cssnano": "^6.0.5",
        "eslint": "^8.56.0",
        "eslint-config-next": "^13.4.13",
        "eslint-plugin-tailwindcss": "^3.13.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3",
        "postcss": "^8.4.31",
        "postcss-import": "^15.1.0",
        "prettier": "^2.8.8",
        "sass": "^1.71.0",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.1.6"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
